{% extends './auth/auth.twig' %}
{% set title = "Signup" %}
{% block head %}
    <link rel="stylesheet" href="/public/stylesheets/login.css">
{% endblock %}


{% block body %}
    {% include '../tmpl/error_modal.twig' with
        {
            'modal_id': 'ajaxError',
            'modal_title': 'Backend response',
            'modal_content': "Bruh the passwords don't actually match fix pls"
        } %}
    {% include '../tmpl/error_modal.twig' with
        {
            'modal_id': 'somethingNoMatch',
            'modal_title': 'bruh moment',
            'modal_content': "Bruh the passwords don't actually match fix pls"
        } %}

    {% include '../tmpl/error_modal.twig' with
        {
            'modal_id': 'inputsBlank',
            'modal_title': 'Blank inputs',
            'modal_content': "Inputs can't be blank bruvv"
        } %}

    {% include '../tmpl/error_modal.twig' with
        {
            'modal_id': 'emailError',
            'modal_title': 'Email format invalid',
            'modal_content': "That's an invalid email format. We won't be able to send emails to that address."
        }%}

    <div class="alert alert-success" role="alert" hidden>
        Successfully signed up!
    </div>
    <div class="container top-level">
        <div class="jumbotron">
            <div class="row">
                <div class="col">
                    <a href="#" onclick="window.history.back();">&lsaquo; Back</a>
                </div>

                <div class="col" style="text-align: right">
                    <a href="/auth/login">Log in instead&rsaquo;</a>
                </div>
            </div>

            <h1>Sign up</h1>
            <img src="https://i.redd.it/r2iatlx7kcg31.jpg" alt="meme 3" width="50%">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">email</i></span>
                </div>
                <input type="text" class="form-control" placeholder="Email" id="email">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">person</i></span>
                </div>
                <input type="text" class="form-control" placeholder="Username" id="username">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">vpn_key</i></span>
                </div>
                <input type="password" class="form-control" placeholder="Password" id="password">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">vpn_key</i></span>
                </div>
                <input type="password" class="form-control" placeholder="Confirm" id="confirmPassword">
            </div>

            <input class="btn btn-success" type="submit" value="Sign Up" onclick="execSignup()">

        </div>
    </div>

    <script src="/public/javascripts/signup.js"></script>
{% endblock %}