{% extends 'auth.twig' %}

{% block head %}
    <link rel="stylesheet" href="/public/stylesheets/login.css">
{% endblock %}


{% block body %}

    <div class="modal fade" id="somethingNoMatch" tabindex="-1" role="dialog" aria-labelledby="somethingNoMatchLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="somethingNoMatchLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bruh the passwords don't actually match fix pls
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container top-level">
        <div class="jumbotron">
            <div class="row">
                <div class="col">
                    <a href="#" onclick="window.history.back();">&lsaquo; Back</a>
                </div>

                <div class="col" style="text-align: right">
                    <a href="/auth/login">Log in instead&rsaquo;</a>
                </div>
            </div>



            <h1>Sign up</h1>
            <img src="https://i.redd.it/r2iatlx7kcg31.jpg" alt="meme 3" width="50%">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="material-icons">person</i></span>
                </div>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" id="username">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="material-icons">vpn_key</i></span>
                </div>
                <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" id="password">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="material-icons">vpn_key</i></span>
                </div>
                <input type="password" class="form-control" placeholder="Confirm Password" aria-label="Confirm Password" aria-describedby="basic-addon1" id="confirmPassword">
            </div>

            <input class="btn btn-success" type="submit" value="Sign Up" onclick="execSignup()">

        </div>
    </div>

    <script src="/public/javascripts/signup.js"></script>
{% endblock %}