{% extends '../tmpl/layout.twig' %}
{% set title = "Dashboard" %}
{% set logged_in = true %}
{% set nav_selected = "dash" %}

{% block head %}
    <link rel="stylesheet" href="/public/stylesheets/user_zone/dash.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>Dashboard</h1>
            <p>
                Bigger search box here (because you're logged in)
            </p>
{#TODO: Add search#}
            <div class="input-group">
                <input class="form-control" type="search" placeholder="Search user-submitted memes" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </div>
            </div>
        </div>

        <div class="jumbotron">
            <h1>Manage my memes</h1>
            <p>Manage your memes, edit or delete the submissions</p>

            <div id="yourMemes">
                {% for meme in memes[:3] %}
                    <div class="meme" onclick="window.location.href = '/meme/{{ meme.key }}'">
                        <p>{{ meme.title }}</p>
                        <img src="{{ meme.mediaLink }}" width="100%">
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}