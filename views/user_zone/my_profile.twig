{% extends '../tmpl/layout.twig' %}
{% set logged_in = true %}
{% set title = "Your Profile" %}
{% set nav_selected = "my_profile" %}


{% block head %}
    <link rel="stylesheet" href="/public/stylesheets/user_zone/my_profile.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>My profile</h1>

            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="dbError">
                <strong>Sowwy!</strong> Something went wrong updating your profile!
            </div>

            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="emailError">
                <strong>Hey!</strong> That email format is invalid!
            </div>

            <div class="alert alert-success alert-dismissible fade show" role="alert" id="successfulUpdate">
                <strong>Yay!</strong> Updated your profile successfully!
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">email</i></span>
                </div>
                <input type="text" class="form-control" value="{{ email }}"
                       placeholder="{{ email }}" id="email" disabled>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="editEmail"
                            onclick="editEmail()">Edit</button>
                </div>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="material-icons">person</i></span>
                </div>
                <input type="text" class="form-control" value="{{ username }}"
                       placeholder="{{ username }}" id="username" disabled>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="editUsername"
                            onclick="editUsername()">Edit</button>
                </div>
            </div>

            <button class="btn btn-primary" type="submit" id="editProfile">Save changes</button>

        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="/public/javascripts/edit_profile.js"></script>
{% endblock %}